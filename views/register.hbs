<div class="container">
  <div class="form-container">
    <h2>Εγγραφή Χρήστη</h2>
    <form action="/register" method="POST">
      <label for="first-name">Όνομα:</label>
      <input type="text" id="first-name" name="name" required />

      <label for="last-name">Επώνυμο:</label>
      <input type="text" id="last-name" name="surname" required />

      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required />
      <p class="error" style="color:red">{{message}}</p>

      <label for="phone">Τηλέφωνο:</label>
      <input type="tel" id="phone" name="phone" required />

      <label for="address">Διεύθυνση:</label>
      <input type="text" id="address" name="address" required />

      <label for="password">Κωδικός Πρόσβασης:</label>
      <input
        type="password"
        id="password"
        name="password"
        minlength="6"
        required
      />

      <button
        class="btn btn-md btn-error"
        style="width:100%; margin-top:10px"
        type="submit"
      >Εγγραφή</button>
      <p class="register-link">Έχετε ήδη λογαριασμό;
        <a href="/login">Συνδεση</a></p>
    </form>
  </div>
</div>