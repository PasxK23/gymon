<div class="hero bg-index">
  <h1>GYM-ON</h1>
  <button
    class="btn btn-md btn-neutral"
    style="margin-bottom: 10px; z-index: 2;"
    onclick="window.location.href='/programs'"
  >ΠΡΟΓΡΑΜΜΑΤΑ</button>

  {{#if userId}}
    <button
      class="btn btn-md btn-neutral-stroke"
      style="z-index: 2;"
      onclick="window.location.href='/syndromes-user'"
    >ΣΥΝΔΡΟΜΕΣ</button>
  {{else}}
    <button
      class="btn btn-md btn-neutral-stroke"
      style="z-index: 2;"
      onclick="window.location.href='/syndromes'"
    >ΣΥΝΔΡΟΜΕΣ</button>
  {{/if}}
</div>

<section class="container">
  <h2>ΓΥΜΝΑΣΤΗΡΙΑ</h2>
  <div class="obj-area">
    {{#each gyms}}
      <a class="card" href="/gyms/{{this.Location}}">
        <h3>{{this.Location}}</h3>
        <div class="divider"></div>
        <img
          src="/images/{{this.Location}}card.webp"
          alt="{{this.Location}}"
          width="400"
          height="300"
        />
      </a>
    {{/each}}
  </div>

  <a href="/gyms" class="tab-item" style="font-weight: 850; margin-top: 30px;">
    ...ΠΕΡΙΣΣΟΤΕΡΑ
  </a>
</section>